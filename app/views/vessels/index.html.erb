
<h1>Alaskan Glacier Tours Fleet</h1>
<% @vessels.each do |vessel| %>
    <h2><%= vessel.name %></h2>
    <p>Year Built: <%= vessel.year_built %></p>
    <p>Currently Running Tours: <%= vessel.operational %></p>
    <p><%= link_to "Edit #{vessel.name}", "/vessels/#{vessel.id}/edit" %></p>
    <p><%= link_to "Delete #{vessel.name}", "/vessels/#{vessel.id}", method: :delete %></p>
    </br>
<% end %>
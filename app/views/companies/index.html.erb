<h1>Alaskan Glacier Tours</h1>
<% @companies.each do |company| %>
    <h2><%= company.name %></h2>
    <p>Created At: <%= company.created_at %> </p> 
    <p>TripAdvisor Rank: <%= company.tripadvisor_rank %></p>
    <p>Currently Offering Tours: <%= company.offering_cruises %></p>
    <p><a href="/companies/<%= company.id %>/edit">Edit Company</a></p>
    <p><%= link_to "Delete Company", "/companies/#{company.id}", method: :delete %></p>
    </br>
<% end %>


<h1>Alaskan Glacier Tours</h1>
<% @companies.each do |company| %>
    <h2><%= link_to "#{company.name}", "/companies/#{company.id}" %></h2>
    <p>Created At: <%= company.created_at %> </p> 
    <p>TripAdvisor Rank: <%= company.tripadvisor_rank %></p>
    <p>Currently Offering Tours: <%= company.offering_cruises %></p>
    <p><%= button_to "Edit #{company.name}", "/companies/#{company.id}/edit", method: :get %></p>
    <p><%= button_to "Delete #{company.name}", "/companies/#{company.id}", method: :delete, data:
        { confirm: "Are you sure?" } %></p>
    </br>
<% end %>
</br>
<%= button_to "New Company", "/companies/new", method: :get %>
</br>
<h4> Search Name: </h4>
    <%= form_tag("/companies", method: :get) do %>
        <%= text_field_tag(:search, params[:search]) %>
        <%= submit_tag ("Search") %>
    <% end  %>
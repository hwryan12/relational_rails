<h1>Edit Company Information</h1>

<%= form_with url: "/companies/#{@company.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :tripadvisor_rank %>
  <%= form.text_field :tripadvisor_rank %>
  <%= form.label :offering_cruises %>
  <%= form.select :offering_cruises, ['true', 'false']%>
  <%= form.submit 'Update' %>
<% end %>


